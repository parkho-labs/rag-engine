# ============================================
# RAG Engine - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ============================================
# Database Configuration (Qdrant)
# ============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_TIMEOUT=30
QDRANT_API_KEY=

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rag_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# MinIO Configuration
# ============================================
MINIO_HOST=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
STORAGE_TYPE=minio

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
VECTOR_SIZE=1024
DISTANCE_METRIC=COSINE
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=gemini

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Gemini Settings
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_MAX_TOKENS=4000
GEMINI_TEMPERATURE=0.1

# Enable JSON response mode (for structured outputs)
ENABLE_JSON_RESPONSE=false

# ============================================
# Application Configuration
# ============================================
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8001
UPLOADS_DIR=uploads
MAX_FILE_SIZE_MB=100

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860,http://localhost:5173,http://localhost:8001,https://ai-content-tutor-ku7bn6e62q-uc.a.run.app,https://ai-content-tutor-846780462763.us-central1.run.app,https://parkho-ai-frontend-ku7bn6e62q-uc.a.run.app,https://parkho-ai-frontend-846780462763.us-central1.run.app

# ============================================
# Reranking Configuration
# ============================================
RERANKER_ENABLED=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=5

# ============================================
# Critic Configuration (Quality Assessment)
# ============================================
CRITIC_ENABLED=true
CRITIC_MODEL_NAME=models/gemini-2.5-flash
CRITIC_MODEL_API_KEY=your_gemini_api_key_here
CRITIC_MODEL_TEMPERATURE=0.1

# ============================================
# Feedback Configuration
# ============================================
FEEDBACK_ENABLED=true
FEEDBACK_SIMILARITY_THRESHOLD=0.8

# ============================================
# Query Configuration
# ============================================
RELEVANCE_THRESHOLD=0.25

# ============================================
# HuggingFace Configuration (Optional)
# ============================================
# Uncomment if you need to use private models or increase download limits
# HF_TOKEN=your_huggingface_token_here
HF_HOME=/app/hf_cache
TRANSFORMERS_CACHE=/app/hf_cache

